# ===============================================================
# vikrampresence.shop — Environment Variables
# ===============================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit the .env file to version control.
# ===============================================================

# ─── Razorpay (from https://dashboard.razorpay.com/app/keys) ───
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=XXXXXXXXXXXXXXXXXXXXXXXX

# ─── PocketBase Admin (for server-side DB operations) ──────────
POCKETBASE_URL=http://localhost:8090
PB_ADMIN_EMAIL=admin@vikrampresence.shop
PB_ADMIN_PASSWORD=your-admin-password-here

# ─── SMTP / Email (for product delivery emails) ───────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# ─── CORS ──────────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000

# ─── Server Port ──────────────────────────────────────────────
PORT=3001
